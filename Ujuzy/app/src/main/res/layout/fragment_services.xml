<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ujuzy.ujuzy.Tabs.ReviewsFragment">

    <ProgressBar
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:visibility="gone"
        android:layout_centerInParent="true"
        android:id="@+id/progressBar"/>

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical"
        android:background="#f1efef"
        android:id="@+id/service_list">

    </android.support.v7.widget.RecyclerView>

    <com.ujuzy.ujuzy.CustomData.AllerFont
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="17dp"
        android:gravity="center_horizontal"
        android:layout_marginTop="80dp"
        android:layout_marginLeft="80dp"
        android:layout_marginRight="80dp"
        android:layout_marginBottom="18dp"
        android:text="No Services posted yet"
        android:id="@+id/noService"/>

    <com.ujuzy.ujuzy.CustomData.AllerButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/button_bg"
        android:id="@+id/createServiceBt"
        android:padding="10dp"
        android:layout_centerHorizontal="true"
        android:visibility="gone"
        android:textSize="15dp"
        android:textColor="#fff"
        android:layout_below="@+id/noService"
        android:textAllCaps="false"
        android:text="Create a service"/>


</RelativeLayout>
