<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    app:theme="@style/ThemeOverlay.AppCompat.Dark">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="13dp"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="48dp">
       <!-- <ImageView
            android:layout_width="30dp"
            android:layout_height="48dp"
            android:padding="6dp"
            android:id="@+id/backBtn"
            android:layout_marginRight="7dp"
            android:src="@drawable/backbtn"/>-->


            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:id="@+id/editAcc"
                android:scaleType="fitXY"
                android:layout_alignParentRight="true"
                android:layout_marginTop="4dp"
                android:padding="7dp"
                android:src="@drawable/if_settings"/>
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="170dp">

            <ImageView
                android:layout_width="90dp"
                android:layout_height="38dp"
                android:layout_centerInParent="true"
                android:layout_above="@+id/searchInput"
                android:scaleType="fitXY"
                android:src="@drawable/ujuzy"/>

            <com.ujuzy.ujuzy.CustomData.AllerBoldEditText
                android:layout_width="match_parent"
                android:layout_centerInParent="true"
                android:layout_height="38dp"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="20dp"
                android:id="@+id/searchInput"
                android:background="@drawable/search_layout"/>

            <HorizontalScrollView
                android:id="@+id/hsv"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/searchInput"
                android:fillViewport="true"
                android:measureAllChildren="false"
                android:scrollbars="none" >
                <LinearLayout
                    android:id="@+id/innerLay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="20dp"
                    android:orientation="horizontal" >

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/lin_lay_tasks"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:background="@drawable/custom_button2">

                            <com.ujuzy.ujuzy.CustomData.AllerFont
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/white"
                                android:textSize="13dp"
                                android:layout_margin="6dp"
                                android:text="Plumbers"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:background="@drawable/custom_button2">

                            <com.ujuzy.ujuzy.CustomData.AllerFont
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/white"
                                android:textSize="13dp"
                                android:layout_margin="6dp"
                                android:text="Electricians"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:background="@drawable/custom_button2">

                            <com.ujuzy.ujuzy.CustomData.AllerFont
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/white"
                                android:textSize="13dp"
                                android:layout_margin="6dp"
                                android:text="Masons"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:background="@drawable/custom_button2">

                            <com.ujuzy.ujuzy.CustomData.AllerFont
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/white"
                                android:layout_margin="6dp"
                                android:textSize="13dp"
                                android:text="Welders"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:background="@drawable/custom_button2">

                            <com.ujuzy.ujuzy.CustomData.AllerFont
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/white"
                                android:textSize="13dp"
                                android:layout_margin="6dp"
                                android:text="Carpenters"/>

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>
            </HorizontalScrollView>

        </RelativeLayout>

    </LinearLayout>
</android.support.v7.widget.Toolbar>
