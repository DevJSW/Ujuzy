                    </LinearLayout>

                </LinearLayout>
            </HorizontalScrollView>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="245dp"
                android:id="@+id/bottomRely"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="10dp"
                android:background="#eaeaea"
                android:orientation="vertical">

                <ProgressBar
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:visibility="gone"
                    android:id="@+id/progressBar1"
                    android:layout_centerInParent="true"/>

                <com.ujuzy.ujuzy.CustomData.AllerFont
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:layout_centerInParent="true"
                    android:id="@+id/noService"
                    android:textSize="15dp"
                    android:layout_margin="50dp"
                    android:visibility="gone"
                    android:text="Sorry... ðŸ˜ž professional services not available at this time, try again later"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/rely">

                    <com.ujuzy.ujuzy.CustomData.AllerBoldFont
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/font_black_light"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="12dp"
                        android:textSize="17dp"
                        android:layout_marginBottom="8dp"
                        android:text="Profession services"/>

                    <com.ujuzy.ujuzy.CustomData.AllerFont
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/font_black_light"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="15dp"
                        android:layout_marginTop="12dp"
                        android:textSize="14dp"
                        android:id="@+id/seeAllProf"
                        android:layout_marginBottom="8dp"
                        android:text="See all >>"/>

                </RelativeLayout>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/service_list"
                    android:layout_width="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_below="@+id/rely"
                    android:layout_height="wrap_content"
                    >

                </android.support.v7.widget.RecyclerView>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="245dp"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="5dp"
                android:background="#eaeaea"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/rely2">

                    <com.ujuzy.ujuzy.CustomData.AllerBoldFont
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/font_black_light"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="12dp"
                        android:textSize="17dp"
                        android:layout_marginBottom="8dp"
                        android:text="Company services"/>

                    <com.ujuzy.ujuzy.CustomData.AllerFont
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/font_black_light"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="15dp"
                        android:layout_marginTop="12dp"
                        android:textSize="14dp"
                        android:id="@+id/seeAllComp"
                        android:layout_marginBottom="8dp"
                        android:text="See all >>"/>

                </RelativeLayout>

                <ProgressBar
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:id="@+id/progressBar2"
                    android:visibility="gone"
                    android:layout_centerInParent="true"/>

                <com.ujuzy.ujuzy.CustomData.AllerFont
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:layout_centerInParent="true"
                    android:id="@+id/noService2"
                    android:textSize="15dp"
                    android:layout_margin="50dp"
                    android:visibility="gone"
                    android:text="Sorry... ðŸ˜ž company services not available at this time, try again later"/>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/company_service_list"
                    android:layout_width="match_parent"
                    android:layout_below="@+id/rely2"
                    android:layout_marginLeft="5dp"
                    android:layout_height="wrap_content"
                    >

                </android.support.v7.widget.RecyclerView>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="245dp"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="5dp"
                android:background="#eaeaea"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/rely3">

                    <com.ujuzy.ujuzy.CustomData.AllerBoldFont
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/font_black_light"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="12dp"
                        android:textSize="17dp"
                        android:layout_marginBottom="8dp"
                        android:text="Services in your Area"/>

                    <com.ujuzy.ujuzy.CustomData.AllerFont
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/font_black_light"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="15dp"
                        android:layout_marginTop="12dp"
                        android:textSize="14dp"
                        android:visibility="gone"
                        android:id="@+id/seeServicesNearby"
                        android:layout_marginBottom="8dp"
                        android:text="See all >>"/>

                </RelativeLayout>


                <com.ujuzy.ujuzy.CustomData.AllerFont
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:layout_centerInParent="true"
                    android:id="@+id/noService3"
                    android:textSize="15dp"
                    android:layout_margin="50dp"
                    android:text="Services closest to you will be collected here"/>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/nearby_service_list"
                    android:layout_width="match_parent"
                    android:layout_below="@+id/rely3"
                    android:layout_marginLeft="5dp"
                    android:layout_height="wrap_content"
                    >

                </android.support.v7.widget.RecyclerView>

            </RelativeLayout>

        </LinearLayout>

    </ScrollView>


