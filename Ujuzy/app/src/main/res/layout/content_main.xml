                            <com.ujuzy.ujuzy.CustomData.AllerFont
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="15dp"
                                android:layout_margin="10dp"
                                android:text="Electricals"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:id="@+id/mediaScrollLl"
                            android:background="@drawable/custom_button2">

                            <com.ujuzy.ujuzy.CustomData.AllerFont
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="15dp"
                                android:layout_margin="10dp"
                                android:text="Broadcast Media"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:id="@+id/masonScrollLl"
                            android:background="@drawable/custom_button2">

                            <com.ujuzy.ujuzy.CustomData.AllerFont
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="15dp"
                                android:layout_margin="10dp"
                                android:text="Masonry"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:id="@+id/paintingScrollLl"
                            android:background="@drawable/custom_button2">

                            <com.ujuzy.ujuzy.CustomData.AllerFont
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="10dp"
                                android:textSize="15dp"
                                android:text="Painting"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:id="@+id/weldersScrollLl"
                            android:background="@drawable/custom_button2">

                            <com.ujuzy.ujuzy.CustomData.AllerFont
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="10dp"
                                android:textSize="15dp"
                                android:text="Welders"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:id="@+id/capentrScrollLl"
                            android:background="@drawable/custom_button2">

                            <com.ujuzy.ujuzy.CustomData.AllerFont
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="15dp"
                                android:layout_margin="10dp"
                                android:text="Carpentry"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:id="@+id/securityScrollLl"
                            android:background="@drawable/custom_button2">

                            <com.ujuzy.ujuzy.CustomData.AllerFont
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="15dp"
                                android:layout_margin="10dp"
                                android:text="Security"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:id="@+id/accountingScrollLl"
                            android:background="@drawable/custom_button2">

                            <com.ujuzy.ujuzy.CustomData.AllerFont
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="15dp"
                                android:layout_margin="10dp"
                                android:text="Accounting"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:id="@+id/legalScrollLl"
                            android:background="@drawable/custom_button2">

                            <com.ujuzy.ujuzy.CustomData.AllerFont
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="15dp"
                                android:layout_margin="10dp"
                                android:text="Legal"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:id="@+id/cosmeticsScrollLl"
                            android:background="@drawable/custom_button2">

                            <com.ujuzy.ujuzy.CustomData.AllerFont
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="15dp"
                                android:layout_margin="10dp"
                                android:text="Cosmetics"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:id="@+id/landscapingScrollLl"
                            android:background="@drawable/custom_button2">

                            <com.ujuzy.ujuzy.CustomData.AllerFont
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="15dp"
                                android:layout_margin="10dp"
                                android:text="Landscaping"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:id="@+id/tailorScrollLl"
                            android:background="@drawable/custom_button2">

                            <com.ujuzy.ujuzy.CustomData.AllerFont
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="15dp"
