<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:theme="@style/AppTheme.ActionBar.Transparent">
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_alignParentBottom="true"
            android:elevation="1dp"
            android:id="@+id/searchRely"
            android:background="@drawable/menu_layout"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp">


            <com.ujuzy.ujuzy.ujuzy.CustomData.AllerFont
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/filterIcon"
                android:layout_centerVertical="true"
                android:textSize="17dp"
                android:text="Searching..."/>


            <ImageView
                android:layout_width="28dp"
                android:layout_height="25dp"
                android:scaleType="fitXY"
                android:layout_margin="10dp"
                android:id="@+id/filterIcon"
                android:src="@drawable/search_icon_grey"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"/>

        </RelativeLayout>
        
    </LinearLayout>

</android.support.v7.widget.Toolbar>
